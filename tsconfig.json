{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "node"
  }
}
